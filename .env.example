# Hardhat/Local Development Configuration
# These variables are used when running the application against the local Hardhat node.

# The private key for the account that will deploy the mock contracts.
# IMPORTANT: DO NOT USE A REAL WALLET KEY HERE. This is for local testing only.
HARDHAT_PRIVATE_KEY_DEPLOYER=0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80

# The Chain ID for the local Hardhat network.
NEXT_PUBLIC_CHAIN_ID=31337

# The RPC URL for the local Hardhat network.
NEXT_PUBLIC_RPC_URL=http://127.0.0.1:8545

# Mock Contract Addresses - These will be populated by the deploy script.
NEXT_PUBLIC_NATO_TOKEN_ADDRESS=
NEXT_PUBLIC_GOVI_COIN_ADDRESS=
NEXT_PUBLIC_NFT_COLLECTION_ADDRESS=

# Nation.fun API
NATION_API_KEY=your_nation_api_key_here
NATION_AGENT_ID=your_agent_id_here
NATION_API_BASE_URL=https://api.nation.fun/v1

# Twitter/X API
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here
TWITTER_BEARER_TOKEN=your_bearer_token_here

# Bot Configuration
BOT_CHECK_INTERVAL=60
BOT_LOG_LEVEL=info
